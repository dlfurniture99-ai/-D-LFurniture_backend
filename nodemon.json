{
  "watch": [
    "api",
    "middleware",
    "models",
    "routes"
  ],
  "ext": "ts,json",
  "ignore": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    ".env",
    ".git"
  ],
  "exec": "ts-node --project tsconfig.json",
  "events": {
    "restart": "clear"
  },
  "delay": 500,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  }
}
