# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dandldb

# JWT Secret (generate a random string min 32 characters)
JWT_SECRET=your-very-secure-secret-key-min-32-characters

# Frontend URL (Vercel deployment URL)
FRONTEND_URL=https://your-frontend.vercel.app

# Cookie Domain (optional, leave empty for default)
COOKIE_DOMAIN=your-frontend.vercel.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Email Service (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password

# Cloudinary (Image Upload)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Razorpay (Payment)
RAZORPAY_KEY_ID=rzp_live_xxxxx
RAZORPAY_KEY_SECRET=your-secret-key
